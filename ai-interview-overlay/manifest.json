{
  "manifest_version": 3,
  "name": "AI Interview Copilot",
  "description": "Real-time AI-powered interview answer assistant",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://localhost:8502/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*", "https://teams.microsoft.com/*", "https://*.zoom.us/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
    
  }
}
